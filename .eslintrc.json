{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "react/jsx-indent": ["error", 2], // Enforce 2 spaces for JSX indentation
    "react/jsx-indent-props": ["error", 2], // Enforce 2 spaces for props
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-console": 0
  }
}
